{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-thousandflicks",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-o",
                "thousandflicks",
                "src/main.cpp",
                "src/bmp.cpp",
                "src/lsb.cpp",
                "src/hamming.cpp",
                "src/prng_permute.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "test-hamming",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-o",
                "test_hamming",
                "test_hamming.cpp",
                "src/hamming.cpp"
            ],
            "group": "test",
            "problemMatcher": ["$gcc"]
        }
    ]
}